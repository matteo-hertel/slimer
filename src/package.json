{
  "name": "slimer",
  "version": "1.0.0",
  "description": "Slimer theme for hugo",
  "engines": {
    "node": "10.13.0",
    "npm": "6.4.1"
  },
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ./dist/ && webpack --mode production --config webpack.prod.config.js",
    "postbuild": "mv dist/* ../static/assets/ && mv ../static/assets/assets.html ../layouts/partials/",
    "dev": "webpack-dev-server --mode development --config webpack.dev.config.js",
    "lint:js": "eslint . --ext js,jsx",
    "lint:js:fix": "eslint . --ext js,jsx --fix",
    "preinstall": "npx Skyscanner/ensure-node-env",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,jsx}\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Matteo Hertel <info@matteohertel.com>",
  "license": "MIT",
  "devDependencies": {
    "assets-webpack-plugin": "^3.9.7",
    "autoprefixer": "^9.4.3",
    "css-loader": "^2.1.0",
    "eslint-config-skyscanner-with-prettier": "^0.4.0",
    "file-loader": "^3.0.1",
    "html-critical-webpack-plugin": "^2.1.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.1.5"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
