{
  "name": "slimer",
  "version": "1.0.0",
  "description": "Slimer theme for hugo",
  "repository": "https://github.com/matteo-hertel/slimer",
  "engines": {
    "node": "^10.16.0",
    "npm": "^6.9.0"
  },
  "main": "src/index.js",
  "collection": "build/components/collection/collection-manifest.json",
  "types": "src/components/components.d.ts",
  "module": "build/components/esm/es5/index.js",
  "scripts": {
    "build": "rm -rf ./dist/ && webpack --mode production --config webpack.prod.config.js",
    "clean": "rm -rf dist build .stencil node_modules site/public",
    "components:build": "stencil build --docs",
    "components:start": "stencil build --dev --watch --serve",
    "components:test": "stencil test --spec --e2e",
    "components:test.watch": "stencil test --spec --e2e --watchAll",
    "dev": "webpack-dev-server --mode development --config webpack.dev.config.js",
    "lint:js": "eslint . --ext js,jsx",
    "lint:js:fix": "eslint . --ext js,jsx --fix",
    "postbuild": "hugo  --minify -d ../dist -s site --baseURL $BASE_URL",
    "prebuild": "npm run components:build",
    "precomponents:build": "rm -rf build/components",
    "predev": "npm run components:build",
    "preinstall": "npx Skyscanner/ensure-node-env",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,jsx}\"",
    "start:hugo": "hugo -d ../dist -s site -vw",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "generate:headers": "node scripts/generateHeaders.js > dist/_headers"
  },
  "keywords": [],
  "author": "Matteo Hertel <info@matteohertel.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@stencil/core": "^0.18.1",
    "@stencil/webpack": "0.0.6",
    "@storybook/html": "^5.0.5",
    "@types/jest": "23.3.14",
    "@types/puppeteer": "^1.12.3",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "acorn": "^6.1.1",
    "assets-webpack-plugin": "^3.9.10",
    "autoprefixer": "^9.5.0",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^2.0.1",
    "css-loader": "^2.1.1",
    "eslint-config-skyscanner-with-prettier": "^0.8.0",
    "eslint-config-typescript": "^2.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "file-loader": "^3.0.1",
    "highlight.js": "^9.15.6",
    "html-webpack-plugin": "^3.2.0",
    "jest": "23.6.0",
    "jest-cli": "23.6.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "puppeteer": "1.11.0",
    "sass-loader": "^7.1.0",
    "svg-url-loader": "^2.3.2",
    "typescript": "^3.4.1",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1",
    "webpack-merge": "^4.2.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
